@model SetsViewModel
@{
    ViewData["Title"] = "Index";
}
<body>
<h1>Details</h1>
<table class="table">
    <tr>
        <th>
            Set
        </th>
        <th>
            Score @Model.Sets[0].Wedstrijd.Teamthuis.Naam

        </th>
        <th>
            Score @Model.Sets[0].Wedstrijd.Teamuit.Naam

        </th>
        <th>
            Winnaar
        </th>
    </tr>

    @foreach (var set in @Model.Sets)
    {
    <tr>
        <td>
            @set.Aantalset
        </td>
        <td>
            @set.Scoreteamthuis
        </td>
        <td>
            @set.Scoreteamuit
        </td>
        @if(set.Wedstrijd.Teamthuis.ID == set.Winaar.ID)
            {
        <td>
            @set.Wedstrijd.Teamthuis.Naam
            
        </td>
            }
        @if(set.Wedstrijd.Teamuit.ID == set.Winaar.ID)
            {
        <td>      
              @set.Wedstrijd.Teamuit.Naam
        </td>
            }
    </tr>
    <tr>
        <td>
            @Html.ActionLink("Aanpassen", "DetailsSet", new { SetID = set.ID}) |
        </td>
    </tr>
    }
</table>
</body>

@if(TempData["message"] != null)
{
<script>alert(" @TempData["message"] ")</script>
}